---
import Share from '@/icons/Share.astro'
import Mark from '@/icons/Mark.astro'

---

<section class="m-5 border p-4 rounded-xl">
  <div class="title flex items-center">
    <h2 class="text-2xl">Software Engineering Manager, Google Search Journeys</h2>
    <div class="flex gap-2 justify-end">
      <button class="rounded-full hover:bg-gray-100 p-5">
        <Share />
      </button>
      <button class="rounded-full hover:bg-gray-100 p-5">
        <Mark />
      </button>
    </div>
  </div>
</section>

<style>

  .title{
    display: grid;
    grid-template-columns: 5fr 1fr;
  }

</style>